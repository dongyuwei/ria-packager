				<div class="controls">
					<input type="text" id="widget" name="widget" placeholder="{{type}} name"/>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="dir">{{type}} dir</label>
				<div class="controls">
					<select id="dir" name="dir">
						{{#widgetList}}
						<option value="{{value}}">{{name}}</option>
						{{/widgetList}}
					</select>
				</div>
			</div>
			<div class="control-group">
